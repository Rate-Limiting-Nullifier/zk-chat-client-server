{
  "extends": "../tsconfig.json",
  "compilerOptions": {
    "outDir": "dist/",
    "rootDir": ".",
    "declaration": true,
    "declarationDir": "dist/",
    "noImplicitAny": false,
    "esModuleInterop": true
  },
  "typeAcquisition": {
    "include": [
      "jest"
    ]
  },
  "include": [
    "./src/**/*.ts",
    "./test/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}